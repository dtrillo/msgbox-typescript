<div id="form_login" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header {{ modal_header_class }}">
			 	<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span></button>
			 	<h3 class="modal-title">{{ titulo }}</h3>
			 </div>
			 <div class="modal-body">
                <form class="form-horizontal" role="form">
                  <div class="form-group">
                    <label for="user" class="col-xs-12 col-md-4 control-label">Usuario</label>
                    <div class="col-xs-12 col-md-8">
                      <input type="text" class="form-control" id="user" name="user" placeholder="Usuario">{{usuario}}</input>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="password" class="col-xs-12 col-md-4 control-label">Contraseña</label>
                    <div class="col-xs-12 col-md-8">
                      <input type="password" class="form-control" id="password" name="password" 
                             placeholder="Contraseña"></input>
                    </div>
                  </div>
                </form>
            </div>
            <div class="modal-footer">
			 	<a href="#" class="btn {{ btn_cerrar_class}}" data-dismiss="modal">Cerrar</a>
			 	<a href="#" class="btn {{ btn_entrar_class}}" id="btn_login" data-dismiss="modal">Entrar</a>
			</div>
        </div>
    </div>
</div>
