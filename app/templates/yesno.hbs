<div id="msgbox_yesnocancel" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header {{ modal_header_class }}">
            	{{#if boton_cerrar}}
			 	<button type="button" class="close" data-dismiss="modal">&times;</button>
			 	{{/if}}
			 	<h3 class="modal-title">{{ titulo }}</h3>
			 </div>
			 <div class="modal-body">
                {{ mensaje }}
            </div>
            
            <div class="modal-footer">
			 	<a href="#" class="btn {{ no_btn_class }} btn-default" id="btn_no" data-dismiss="modal">{{ txt_boton_no }}</a>
			 	<a href="#" class="btn {{ yes_btn_class }}" id="btn_yes">{{ txt_boton_yes }} </a>
			 	{{#if boton_cancel}}
			 	<a href="#" class="btn {{ cancel_btn_class }}" id="btn_cancel">{{ txt_boton_cancel }} </a>
			 	{{/if}}
			</div>
        </div>
    </div>
</div>